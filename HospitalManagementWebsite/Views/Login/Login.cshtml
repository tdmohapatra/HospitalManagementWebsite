@using HospitalManagementWebsite.Models
@model DoctorRegistration

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        .container {
            width: 100%;
            max-width: 1100px;
            display: flex;
            flex-direction: row;
            box-sizing: border-box;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            animation: fadeIn 1s ease-out;
            overflow: hidden;
            height: 80vh;
        }

        /* Left side content */
        .left-side {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
            animation: slideIn 1s ease-out;
            margin-top: 2%;
        }

        h1 {
            font-size: 2.2em;
            margin-bottom: 30px;
            color: #333;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            animation: fadeInUp 1s ease-out;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            font-size: 16px;
            height: 45px;
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #ddd;
            box-sizing: border-box;
            margin-bottom: 20px;
            min-width: 300px;
            transition: border 0.3s ease; /* Add smooth border transition */
        }

        .form-control:focus {
            border: 1px solid #007bff;
        }

        .btn-block {
            font-size: 16px;
            padding: 12px;
            background-color: #007bff;
            border-radius: 8px;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
            border: none;
        }

        .btn-block:hover {
            background-color: #0056b3;
        }

        .checkbox-group {
            margin-top: 10px;
        }

        /* Password Field Container */
        .password-container {
            position: relative;
        }

        /* Eye Icon (Password Toggle) */
        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            cursor: pointer;
            color: #007bff;
        }

        /* Right side content (Slider) */
        .right-side {
            flex: 1;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .slider-container {
            width: 100%;
            height: 100%;
            position: relative;
            border-radius: 10px;
            overflow: hidden;
        }

        .slider-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            animation: fadeInSlider 3s forwards;
        }

        /* Keyframes for Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideIn {
            from {
                transform: translateX(-100%);
            }

            to {
                transform: translateX(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInSlider {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }

        @@keyframes scrollContent {
            0% {
                transform: translateY(100%);
            }

            100% {
                transform: translateY(-100%);
            }
        }

        /* Mobile Styles */
        @@media (max-width: 768px) {
            .container {
                flex-direction: column;
                height: auto;
                max-width: 100%;
                padding: 20px;
            }

            .left-side,
            .right-side {
                width: 100%;
                padding: 10px;
            }

            .scrolling-info {
                display: none;
            }

            h1 {
                font-size: 1.8em;
            }

            .form-control,
            .btn-block {
                font-size: 14px;
            }
        }
    </style>

</head>

<body>
    <div class="container">
        <div class="left-side">
            <h1>Welcome Back! Please Log In</h1>
            <div class="container">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label for="Email">User Name:</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter your email", id = "Email" })
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group password-container">
                        <label for="Password">Password:</label>
                        <div class="position-relative">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Enter your password", type = "password", id = "Password" })
                            <span toggle="#Password" class="fa fa-fw fa-eye toggle-password" id="eye-icon"></span>
                        </div>
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="checkbox-group mt-3 form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="stayLoggedIn">
                        <label class="form-check-label" for="stayLoggedIn">Stay logged in</label>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn-block">Login</button>
                    </div>
                    <div class="mt-3 text-center">
                        <a href="@Url.Action("DrRegister", "Login")" class="btn btn-success d-inline-flex align-items-center">
                            Go to Register Page
                            <i class="bi bi-arrow-right ms-2"></i>
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="right-side">
            <div class="slider-container">
                <div class="slider">
                    <img id="slider-image" src="" alt="Random Image" />
                </div>
            </div>
        </div>
    </div>

    <div style="margin-bottom:2%;" class="mt-3 text-center">
        <a href="~/Home/TDMWELCOMEPAGE" class="btn btn-secondary btn-sm rounded shadow">
            <i class="bi bi-arrow-left"></i> Back to Home Page
        </a>


        <a href="~/InternalUser/InternalLogin" class="btn btn-secondary btn-sm rounded shadow">
            <i class="bi bi-arrow-left"></i> Internal User Login
        </a>
    </div>

    <script>
        // Toggle password visibility
        document.getElementById("eye-icon").addEventListener("click", function () {
            var passwordField = document.getElementById("Password");
            var icon = document.getElementById("eye-icon");

            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        });

        document.addEventListener("DOMContentLoaded", function () {
            const images = [
                '/Media/Images/HMS_SLIDER (1).jpg',
                '/Media/Images/HMS_SLIDER (2).jpg',
                '/Media/Images/HMS_SLIDER (3).jpg',
                '/Media/Images/HMS_SLIDER (4).jpg',
                '/Media/Images/HMS_SLIDER (5).jpg'
            ];

            function getRandomImage() {
                const randomIndex = Math.floor(Math.random() * images.length);
                return images[randomIndex];
            }

            const imageElement = document.getElementById('slider-image');
            imageElement.src = getRandomImage();

            setInterval(() => {
                imageElement.style.opacity = 0;
                setTimeout(() => {
                    imageElement.src = getRandomImage();
                    imageElement.style.opacity = 1;
                }, 1000); // Match the opacity transition time
            }, 5000); // Change image every 3 seconds
        });
    </script>

</body>

</html>
