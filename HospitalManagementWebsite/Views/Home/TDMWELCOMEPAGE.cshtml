        /* General Reset */
        /* General Reset */
        /* Basic setup */
        body, html {
            margin: 0;
            padding: 0;
            height: auto; /* Allow the body to expand for scrolling */
            overflow: auto; /* Enable scrolling */
            font-family: Arial, sans-serif;
        }

        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: linear-gradient(45deg, #1f1f1f, #141414);
            /* Removed overflow: hidden */
        }

        /* Content styling */
        .content {
            position: relative;
            z-index: 1;
            color: #fff;
            text-align: center;
            padding-top: 50vh;
            font-size: 2rem;
        }


        /* General shape styles */
        .shape {
            position: absolute;
            background-color: rgba(0, 255, 0, 0.6);
            opacity: 0.8;
        }

        /* Triangles */
        .triangle {
            width: 0;
            height: 0;
            border-left: 30px solid transparent;
            border-right: 30px solid transparent;
            border-bottom: 60px solid rgba(0, 255, 0, 0.8);
            animation: rotateTriangle 5s infinite linear;
        }

        /* Circles */
        .circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: rgba(0, 255, 255, 0.6);
            animation: scaleCircle 4s ease-in-out infinite;
        }

        /* Squares */
        .square {
            width: 50px;
            height: 50px;
            background-color: rgba(255, 0, 255, 0.7);
            animation: moveSquare 6s linear infinite;
        }

        /* Rotating Triangle Animation */
        @@keyframes rotateTriangle {
            0% {
                transform: rotate(0deg);
                top: 20%;
                left: 10%;
            }

            50% {
                transform: rotate(180deg);
                top: 40%;
                left: 30%;
            }

            100% {
                transform: rotate(360deg);
                top: 60%;
                left: 50%;
            }
        }

        /* Scaling Circle Animation */
        @@keyframes scaleCircle {
            0%, 100% {
                transform: scale(0.5);
                top: 10%;
                left: 20%;
            }

            50% {
                transform: scale(1.5);
                top: 50%;
                left: 40%;
            }
        }

        /* Moving Square Animation */
        @@keyframes moveSquare {
            0% {
                top: 10%;
                left: 10%;
            }

            25% {
                top: 50%;
                left: 30%;
            }

            50% {
                top: 70%;
                left: 60%;
            }

            75% {
                top: 40%;
                left: 80%;
            }

            100% {
                top: 10%;
                left: 10%;
            }
        }

        /* Hover effect to create random deflection of shapes */
        body:hover .shape {
            animation: deflectShape 1s ease-in-out forwards;
        }

        @@keyframes deflectShape {
            0% {
                transform: translateX(0) rotate(0deg);
            }

            50% {
                transform: translateX(30px) rotate(90deg);
            }

            100% {
                transform: translateX(-30px) rotate(180deg);
            }
        }



