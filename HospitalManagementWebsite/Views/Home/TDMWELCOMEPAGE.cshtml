    <!-- Sound effect for the slider transition -->
    <audio id="swishSound" src="https://www.soundjay.com/button/beep-07.wav" preload="auto"></audio>

    <script>
        let currentIndex = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        const soundEffect = document.getElementById('swishSound');

        // Function to change the slider
        function updateSlider() {
            // Remove active classes and set the new center slide
            slides.forEach((slide, index) => {
                slide.classList.remove('active');
                if (index === currentIndex) {
                    slide.classList.add('active');
                }
            });

            // Move the wrapper to show the current slide in the center
            const offset = -currentIndex * 33.33;
            document.querySelector('.slider-wrapper').style.transform = `translateX(${offset}%)`;

            // Play the sound effect on slide change
            soundEffect.play();
        }

        // Move the slide left or right
        function moveSlide(direction) {
            currentIndex = (currentIndex + direction + totalSlides) % totalSlides;
            updateSlider();
        }

        // Automatically update the slider every 5 seconds
        setInterval(() => {
            moveSlide(1);
        }, 5000);

        // Initial slider update
        updateSlider();
    </script>

    <script>
        // Get reference to the background element
        const background = document.querySelector('.background');

        // Set a limit for the number of shapes to display
        const maxShapes = 20;
        let shapesCount = 0; // Keep track of the number of shapes

        // Function to create random geometric shapes
        function createRandomShape() {
            // Stop creating new shapes if the limit is reached
            if (shapesCount >= maxShapes) return;

            const shapeType = Math.random();
            const shape = document.createElement('div');

            // Decide the shape type (with 5% chance of trapezoid)
            if (Math.random() < 0.05) {
                shape.classList.add('shape', 'trapezoid');
            } else if (shapeType < 0.25) {
                shape.classList.add('shape', 'triangle');
            } else if (shapeType < 0.5) {
                shape.classList.add('shape', 'circle');
            } else if (shapeType < 0.75) {
                shape.classList.add('shape', 'square');
            } else if (shapeType < 0.85) {
                shape.classList.add('shape', 'rectangle'); // Add rectangle shape
            }

            // Randomize size and position
            const size = Math.random() * 30 + 10; // Random size between 20px and 60px
            shape.style.width = `${size}px`;
            shape.style.height = `${size}px`;
            shape.style.top = `${Math.random() * 100}vh`; // Random vertical position
            shape.style.left = `${Math.random() * 100}vw`; // Random horizontal position

            // For the rectangle shape
            if (shape.classList.contains('rectangle')) {
                shape.style.width = `${Math.random() * 80 + 60}px`; // Random width (between 60px and 140px)
                shape.style.height = `${Math.random() * 40 + 20}px`; // Random height (between 20px and 60px)
                shape.style.border = '2px solid white'; // White border
                shape.style.backgroundColor = 'transparent'; // No background color
            }

            // For the trapezoid shape
            if (shape.classList.contains('trapezoid')) {
                shape.style.borderTop = '30px solid transparent';
                shape.style.borderBottom = '30px solid rgba(0, 255, 0, 0.6)';
                shape.style.width = `${Math.random() * 40 + 60}px`; // Random width
                shape.style.height = '40px'; // Trapezoid height
            }

            // Append the shape to the background
            background.appendChild(shape);

            // Increment the shapes count
            shapesCount++;

            // Remove the shape after 5 seconds
            setTimeout(() => {
                background.removeChild(shape);
                shapesCount--; // Decrease the count when a shape is removed
            }, 5000); // Shape disappears after 5 seconds
        }

        // Create random shapes every 500ms
        setInterval(createRandomShape, 500);

    </script>
