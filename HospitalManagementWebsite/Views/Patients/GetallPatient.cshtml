<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }





    .timer {
        font-size: 16px;
        font-weight: bold;
    }

    footer {
        background-color: #3498db;
        color: #fff;
        text-align: center;
        padding: 10px 20px;
        margin-top: 20px;
    }

    #searchBox {
        padding: 8px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
