    }

    .pagination {
        text-align: center;
        margin: 20px 0;
    }

    .page {
        display: inline-block;
        padding: 8px 12px;
        margin: 0 5px;
        background-color: #3498db;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .page:hover {
            background-color: #297fb8;
        }

